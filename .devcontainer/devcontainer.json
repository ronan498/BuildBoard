{
  "name": "BuildBoard Expo",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}/mobile",
  "postCreateCommand": "corepack enable && (yarn install || npm ci)",
  "forwardPorts": [19000, 19001, 19002],
  "portsAttributes": {
    "19000": { "label": "Expo Metro" },
    "19001": { "label": "Expo WebSocket" },
    "19002": { "label": "Expo DevTools" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vsliveshare.vsliveshare"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  }
}
